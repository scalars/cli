{
  "compilerOptions": {
    "target": "es2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/dts",
    "emitDeclarationOnly": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": [ ".dist/**/*.ts", "./src/__test__/**/*", "./src/tests/**/*" ]
}

